<div class="container my-3">
    <h3 class="unica-one">Educational Expenses</h3>
    <div class="form-row">
        <label>School Supplies:</label>
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text">$</span>
            </div>
            <input type="number" class="form-control" id="monthlySchoolSupplies">
        </div>
    </div>
    <div class="form-row">
        <label>Meal Plan:</label>
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text">$</span>
            </div>
            <input type="number" class="form-control" id="monthlyMealPlan">
        </div>
    </div>
    <div class="form-row">
        <label>Tuition:</label>
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text">$</span>
            </div>
            <input type="number" class="form-control" id="monthlyTuition">
        </div>
    </div>
    <div class="form-row">
        <label>Textbooks:</label>
        <div class="input-group mb-3">
            <div class="input-group-prepend">
                <span class="input-group-text">$</span>
            </div>
            <input type="number" class="form-control" id="monthlyTextbooks">
        </div>
    </div>
    <div class="text-center">
        <button type="button" id="monthlyAddEducationToYear" class="mx-auto btn btn-orange w-50 mt-3 unica-one">Transfer
            to Yearly Budget <i class="fas fa-sign-in-alt"></i></button>
        <button type="button" class="mx-auto btn btn-success w-25 btn-block mt-3 unica-one monthly-submit-button">Submit
            <i class="fas fa-paper-plane"></i></button>
    </div>
</div>