<div class="container my-3">
    <h3 class="unica-one">Transportation</h3>
    <div class="form-row">
        <div class="col">
            <label>Car Payment:</label>
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text">$</span>
                </div>
                <input type="number" class="form-control" id="monthlyCarPayments">
            </div>
        </div>
        <div class="col">
            <label>Car Insurance:</label>
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text">$</span>
                </div>
                <input type="number" class="form-control" id="monthlyCarInsurance">
            </div>
        </div>
    </div>
    <div class="form-row">
        <div class="col">
            <label>Gas:</label>
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text">$</span>
                </div>
                <input type="number" class="form-control" id="monthlyCarGas">
            </div>
        </div>
        <div class="col">
            <label>Car Repairs:</label>
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text">$</span>
                </div>
                <input type="number" class="form-control" id="monthlyCarRepairs">
            </div>
        </div>
    </div>
    <div class="form-row">
        <div class="col">
            <label>Parking & Tolls:</label>
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text">$</span>
                </div>
                <input type="number" class="form-control" id="monthlyParking">
            </div>
        </div>
        <div class="col">
            <label>Public Transit:</label>
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text">$</span>
                </div>
                <input type="number" class="form-control" id="monthlyPublicTransit">
            </div>
        </div>
    </div>
    <div class="text-center">
        <button type="button" id="monthlyAddTransportationToAll"
            class="mx-auto btn btn-orange w-50 mt-3 unica-one">Transfer to Yearly Budget <i
                class="fas fa-sign-in-alt"></i></button>
        <button type="button" class="mx-auto btn btn-success w-25 btn-block mt-3 unica-one monthly-submit-button">Submit
            <i class="fas fa-paper-plane"></i></button>
    </div>
</div>