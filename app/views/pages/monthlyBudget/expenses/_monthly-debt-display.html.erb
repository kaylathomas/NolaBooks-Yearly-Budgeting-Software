<div class="container my-3">
    <h3 class="unica-one">Debt & Loans</h3>
    <div class="form-row">
        <div class="col">
            <label>Credit Cards:</label>
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text">$</span>
                </div>
                <input type="number" class="form-control" id="monthlyCreditCards">
            </div>
        </div>
        <div class="col">
            <label>Student Loans:</label>
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text">$</span>
                </div>
                <input type="number" class="form-control" id="monthlyStudentLoans">
            </div>
        </div>
    </div>
    <div class="form-row">
        <div class="col">
            <label>Medical Debt:</label>
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text">$</span>
                </div>
                <input type="number" class="form-control" id="monthlyMedicalDebt">
            </div>
        </div>
        <div class="col">
            <label>Tax Payments:</label>
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text">$</span>
                </div>
                <input type="number" class="form-control" id="monthlyTaxPayments">
            </div>
        </div>
    </div>
    <div class="form-row">
        <div class="col">
            <label>Store Cards:</label>
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text">$</span>
                </div>
                <input type="number" class="form-control" id="monthlyStoreCards">
            </div>
        </div>
        <div class="col">
            <label>Personal Debt:</label>
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text">$</span>
                </div>
                <input type="number" class="form-control" id="monthlyPersonalDebt">
            </div>
        </div>
    </div>
    <div class="text-center">
        <button type="button" id="monthlyAddDebt" class="mx-auto btn btn-info w-50 mt-3 unica-one">Add Expense <i
                class="fas fa-plus"></i></button>
        <button type="button" id="monthlyAddDebtToYear" class="mx-auto btn btn-orange w-50 mt-3 unica-one">Transfer to
            Yearly Budget <i class="fas fa-sign-in-alt"></i></button>
        <button type="button" class="mx-auto btn btn-success w-25 btn-block mt-3 unica-one monthly-submit-button">Submit
            <i class="fas fa-paper-plane"></i></button>
    </div>
</div>