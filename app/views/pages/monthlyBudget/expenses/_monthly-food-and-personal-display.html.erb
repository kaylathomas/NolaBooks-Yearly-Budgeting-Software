<div class="container my-3">
    <h3 class="unica-one">Monthly Food & Personal</h3>
    <div class="form-row">
        <div class="col">
            <label>Groceries/Household Purchases:</label>
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text">$</span>
                </div>
                <input type="number" class="form-control" id="monthlyGroceries">
            </div>
        </div>
        <div class="col">
            <label>Meals Out:</label>
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text">$</span>
                </div>
                <input type="number" class="form-control" id="monthlyMealsOut">
            </div>
        </div>
    </div>
    <div class="form-row">
        <div class="col">
            <label>Clothing:</label>
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text">$</span>
                </div>
                <input type="number" class="form-control" id="monthlyClothing">
            </div>
        </div>
        <div class="col">
            <label>Entertainment:</label>
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text">$</span>
                </div>
                <input type="number" class="form-control" id="monthlyEntertainment">
            </div>
        </div>
    </div>
    <div class="form-row">
        <div class="col">
            <label>Pet Supplies:</label>
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text">$</span>
                </div>
                <input type="number" class="form-control" id="monthlyPet">
            </div>
        </div>
        <div class="col">
            <label>Hobbies & Sports:</label>
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text">$</span>
                </div>
                <input type="number" class="form-control" id="monthlyHobbies">
            </div>
        </div>
    </div>
    <div class="form-row">
        <div class="col">
            <label>Charitable Donations:</label>
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text">$</span>
                </div>
                <input type="number" class="form-control" id="monthlyCharitableDonations">
            </div>
        </div>
        <div class="col">
            <label>Subscriptions:</label>
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text">$</span>
                </div>
                <input type="number" class="form-control" id="monthlySubscriptions">
            </div>
        </div>
    </div>
    <div class="text-center">
        <button type="button" id="monthlyAddFoodAndPersonal" class="mx-auto btn btn-info w-50 mt-3 unica-one">Add
            Expense <i class="fas fa-plus"></i></button>
        <button type="button" id="monthlyAddFoodAndPersonalToYear"
            class="mx-auto btn btn-orange w-50 mt-3 unica-one">Transfer to Yearly Budget <i
                class="fas fa-sign-in-alt"></i></button>
        <button type="button" class="mx-auto btn btn-success w-25 btn-block mt-3 unica-one monthly-submit-button">Submit
            <i class="fas fa-paper-plane"></i></button>
    </div>
</div>