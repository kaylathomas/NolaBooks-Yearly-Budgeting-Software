<form onSubmit="return false;">
    <div class="container my-3">
        <h3 class="unica-one">Home Expenses</h3>
        <div class="form-row">
            <div class="col">
                <label>Rent:</label>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text">$</span>
                    </div>
                    <input type="number" class="form-control" id="monthlyRent">
                </div>
            </div>
            <div class="col">
                <label>Mortgage:</label>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text">$</span>
                    </div>
                    <input type="number" class="form-control" id="monthlyMortgage">
                </div>
            </div>
        </div>
        <div class="form-row">
            <div class="col">
                <label>Repair/Maintinence:</label>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text">$</span>
                    </div>
                    <input type="number" class="form-control" id="monthlyRepair">
                </div>
            </div>
            <div class="col">
                <label>Cable/TV:</label>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text">$</span>
                    </div>
                    <input type="number" class="form-control" id="monthlyCable">
                </div>
            </div>
        </div>
        <div class="form-row">
            <div class="col">
                <label>Home Insurance:</label>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text">$</span>
                    </div>
                    <input type="number" class="form-control" id="monthlyHomeInsurance">
                </div>
            </div>
            <div class="col">
                <label>HOA Fees:</label>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text">$</span>
                    </div>
                    <input type="number" class="form-control" id="monthlyHOA">
                </div>
            </div>
        </div>
        <div class="form-row">
            <div class="col">
                <label>Internet:</label>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text">$</span>
                    </div>
                    <input type="number" class="form-control" id="monthlyInternet">
                </div>
            </div>
            <div class="col">
                <label>Cellphone:</label>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text">$</span>
                    </div>
                    <input type="number" class="form-control" id="monthlyCellphone">
                </div>
            </div>
        </div>
        <h3 class="unica-one">Utilities</h3>
        <div class="form-row">
            <div class="col">
                <label>Water:</label>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text">$</span>
                    </div>
                    <input type="number" class="form-control" id="monthlyWater">
                </div>
            </div>
            <div class="col">
                <label>Gas:</label>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text">$</span>
                    </div>
                    <input type="number" class="form-control" id="monthlyGas">
                </div>
            </div>
            <div class="col">
                <label>Electricity:</label>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text">$</span>
                    </div>
                    <input type="number" class="form-control" id="monthlyElectricity">
                </div>
            </div>
        </div>
        <div class="text-center">
            <button type="button" id="monthlyAddHome" class="mx-auto btn btn-info w-50 mt-3 unica-one">Add Expense <i
                    class="fas fa-plus"></i></button>
            <button type="button" id="monthlyAddHomeToYear" class="mx-auto btn btn-orange w-50 mt-3 unica-one">Transfer
                to
                Yearly Budget <i class="fas fa-sign-in-alt"></i></button>
            <button type="button"
                class="mx-auto btn btn-success w-25 btn-block mt-3 unica-one monthly-submit-button">Submit
                <i class="fas fa-paper-plane"></i></button>
        </div>
    </div>
</form>